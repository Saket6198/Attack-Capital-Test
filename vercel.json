{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "apps/web/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/getToken/(?<username>[^/]+)/(?<roomId>[^/]+)",
      "dest": "/apps/api/index.py"
    },
    {
      "src": "/api/getAgentToken/(?<roomId>[^/]+)",
      "dest": "/apps/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ]
}
